<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
    android:id="@+id/imageDeal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/txt_margin_std"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@android:drawable/sym_def_app_icon"/>


    <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/txt_margin_std"
    android:layout_marginTop="@dimen/txt_margin_std"
    android:text="TextView"
    android:textSize="@dimen/title_large"
    android:textColor="@color/colorPrimaryDark"
    android:fontFamily="@font/bubblegum_sans"
    app:layout_constraintStart_toEndOf="@+id/imageDeal"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="68dp"
        android:paddingEnd="@dimen/txt_margin_std"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="TextView"
        android:textSize="@dimen/text_price"
        app:layout_constraintStart_toEndOf="@+id/imageDeal"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_margin_std"
        android:layout_marginEnd="50dp"
        android:text="TextView"
        android:fontFamily="@font/bubblegum_sans"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
